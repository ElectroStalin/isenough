<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:elevation="2dp"
            android:theme="@style/CardView.Dark"
            app:cardBackgroundColor="@color/colorPrimaryDark">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvProdName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TextView"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/tvProdCal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvProdName"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:text="TextView"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvProdProt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvProdName"
                    android:layout_margin="1dp"
                    android:layout_toRightOf="@+id/tvProdCal"
                    android:layout_weight="1"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/tvProdLip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvProdName"
                    android:layout_margin="1dp"

                    android:layout_toRightOf="@+id/tvProdProt"
                    android:layout_weight="1"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/tvProdCar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvProdName"
                    android:layout_margin="1dp"
                    android:layout_toRightOf="@+id/tvProdLip"
                    android:layout_weight="1"
                    android:text="TextView" />

                <ImageButton
                    android:id="@+id/ibDelProd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="7dp"
                    android:background="@color/colorPrimaryDark"
                    android:elevation="2dp"
                    android:translationY="1dp"
                    android:translationZ="2dp"
                    app:srcCompat="@android:drawable/ic_menu_delete" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>
</layout>