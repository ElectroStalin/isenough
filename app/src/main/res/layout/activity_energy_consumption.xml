<?xml version="1.0" encoding="utf-8"?>
<layout

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#5C6BC0"
        tools:context="vladimir.enough.activity.EnergyConsumption">

        <android.support.v7.widget.CardView
            android:id="@+id/cvAnt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            app:cardBackgroundColor="@color/colorPrimaryDark">

            <LinearLayout
                android:id="@+id/lrInf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/twAge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.18"
                    android:text="Возраст"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/twWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.29"
                    android:text="Вес"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/twHeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.28"
                    android:text="Рост"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/twSex"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.02"
                    android:text="Пол"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lrInf"
                android:layout_marginTop="20dp">

                <EditText
                    android:id="@+id/etAge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="numberSigned"
                    android:maxLength="3" />

                <EditText
                    android:id="@+id/etWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="numberSigned"
                    android:maxLength="3" />

                <EditText
                    android:id="@+id/etHeight"
                    android:layout_width="106dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="numberSigned"
                    android:maxLength="3" />

                <RadioGroup
                    android:layout_width="52dp"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/rbM"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="М" />

                    <RadioButton
                        android:id="@+id/rbW"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Ж" />

                </RadioGroup>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cvDesription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cvAnt"
            android:layout_margin="3dp"
            app:cardBackgroundColor="@color/colorPrimaryDark">

            <TextView
                android:id="@+id/twDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Установите время, затрачиваемое на активности,
             которые происходят с вами в течении суток. Всего должно быть 1440 минут"

                android:textAlignment="center" />

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/cvList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/cvBot"
            android:layout_below="@+id/cvDesription"
            app:cardBackgroundColor="#5C6BC0">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvCons"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="#5C6BC0">

            </android.support.v7.widget.RecyclerView>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cvBot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="3dp"
            android:layout_marginBottom="6dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/colorPrimaryDark">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/button_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@color/colorPrimaryDark"
                    android:translationY="1dp"
                    android:translationZ="2dp"
                    app:srcCompat="@android:drawable/ic_menu_edit" />

                <TextView
                    android:id="@+id/twTimeLeft"

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="TextView"
                    android:textSize="18sp"
                    tools:gravity="top|center_horizontal" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>
</layout>