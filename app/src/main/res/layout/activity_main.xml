<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#38006b"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vladimir.enough.activity.MainActivity"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"

        app:cardBackgroundColor="#EEEEEE"

        app:cardCornerRadius="3dp"
        app:cardElevation="0dp"
        app:contentPadding="1dp">

        <TableLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"

            android:orientation="horizontal"
            android:weightSum="4">

            <TableRow android:weightSum="2">

                <TextView
                    android:id="@+id/tvBX"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textColor="@color/cardview_dark_background"/>

                <TextView
                    android:id="@+id/tvIM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textColor="@color/cardview_dark_background"/>

            </TableRow>


            <TableRow>

                <TextView
                    android:id="@+id/twDayCal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:textColor="@color/cardview_dark_background"/>

                <TextView
                    android:id="@+id/twDayProt"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:textColor="@color/cardview_dark_background"/>

                <TextView
                    android:id="@+id/twDayLip"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:textColor="@color/cardview_dark_background"/>

                <TextView
                    android:id="@+id/twDayCarb"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:textColor="@color/cardview_dark_background"/>
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/twCurCal"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/twDayCal"
                    android:layout_weight="1"
                    android:text=""
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:textColor="@color/cardview_dark_background"/>

                <TextView
                    android:id="@+id/twCurProt"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:textColor="@color/cardview_dark_background"/>


                <TextView
                    android:id="@+id/twCurLip"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:textColor="@color/cardview_dark_background"/>

                <TextView
                    android:id="@+id/twCurCarb"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:textColor="@color/cardview_dark_background"/>


            </TableRow>

        </TableLayout>

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/btnConsEnergy"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:background="#01579B"
        android:elevation="2dp"
        android:text="Потребление энергии"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="1dp"
        android:layout_above="@+id/btnProducts"
        android:layout_alignStart="@+id/btnConsHistory" />

    <Button
        android:id="@+id/btnConsHistory"

        style="@android:style/Widget.Material.Light.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:background="#01579B"
        android:elevation="2dp"
        android:text="история энергозатрат"
        android:layout_above="@+id/btnConsEnergy"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnActs"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#01579B"
        android:text="список активностей" />

    <Button
        android:background="#01579B"

        android:id="@+id/btnProducts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Продукты"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="69dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#01579B"
        android:text="+"
        android:textSize="36sp"
        android:layout_above="@+id/btnConsHistory"
        android:layout_alignStart="@+id/btnProducts"
        android:layout_marginBottom="10dp" />


</RelativeLayout>
